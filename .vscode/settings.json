{
  "files.associations": {
    ".antigenrc": "shellscript"
  },
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "shellcheck.customArgs": [ "-x", "-s", "bash" ],
  "shellcheck.exclude": [ 2155, 2091 ],
  "shellcheck.ignorePatterns": {
    "**/.*rc": true
  }
}
